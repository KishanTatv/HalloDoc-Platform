        });

        $('.CancelCase').click(function () {
            var reqid = $(this).data('reqid');
            $.ajax({
                url: '/AdminDash/PopupCancelcase',
                method: 'POST',
                data: { reqid: reqid },
                success: function (response) {
                    $(".PartialPopup").html(response);
                    var my = new bootstrap.Modal(document.getElementById('cancelCase'));
                    my.show();
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

        $('.ViewUpload').click(function () {
            var reqid = $(this).data('reqid');
            $.ajax({
                url: '/AdminDash/ViewUploads',
                method: 'POST',
                data: { reqid: reqid },
                success: function (response) {
                    hideOtherPortion();
                    $("#partial").html(response);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

        $('.OrderCase').click(function () {
            var reqid = $(this).data('reqid');
            $.ajax({
                url: '/AdminDash/SendOrder',
                method: 'POST',
                data: { reqid: reqid },
                success: function (response) {
                    hideOtherPortion();
                    $("#partial").html(response);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

        $('.ClearCase').click(function () {
            var reqid = $(this).data('reqid');
            $.ajax({
                url: '/AdminDash/clearcase',
                method: 'POST',
                data: { reqid: reqid },
                success: function (response) {
                    $(".PartialPopup").html(response);
                    var my = new bootstrap.Modal(document.getElementById('clearCase'));
                    my.show();
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

        $('.SendAgreement').click(function () {
            var reqid = $(this).data('reqid');
            $.ajax({
                url: '/AdminDash/sendAgree',
                method: 'POST',
                data: { reqid: reqid },
                success: function (response) {
                    $(".PartialPopup").html(response);
                    var my = new bootstrap.Modal(document.getElementById('sendAgree'));
                    my.show();
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

        $('.CloseCase').click(function () {
            var reqid = $(this).data('reqid');
            $.ajax({
                url: '/AdminDash/CloseCase',
                method: 'POST',
                data: { reqid: reqid },
                success: function (response) {
                    hideOtherPortion();
                    $("#partial").html(response);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        });

    });
</script>
