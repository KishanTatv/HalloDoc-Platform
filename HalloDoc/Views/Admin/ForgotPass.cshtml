@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form class="FormCnt w-50">
    <a class="btn w-5 btn-info rounded bg-transparent m-2 text-info" asp-controller="Admin" asp-action="AdminLogin">
        <strong class="pe-2">&lt Back</strong>
    </a>
    <h4 class="mb-4 mt-3">Reset Your Password</h4>

    <div class="form-floating mb-3">
        <input type="text" class="form-control bg-transparent focus-ring focus-ring-info  position-relative" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email</label>
        <div class="position-absolute top-0 end-0 mx-3 my-2">
            <i class="bi bi-person-circle fs-4 text-secondary"></i>
        </div>
    </div>

    <button type="button" class="w-100 h-10 btn btn-md btn-info text-light mt-3">Reset Password</button>
    <a class="nav-link text-center text-info fw-bold" asp-controller="Admin" asp-action="AdminLogin"><span class="w-20">&lt </span>Back to login</a>
</form>