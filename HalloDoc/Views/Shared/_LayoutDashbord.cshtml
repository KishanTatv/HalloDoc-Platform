<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - halloDoc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    @* for conact api *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/css/intlTelInput.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/js/intlTelInput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/js/utils.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/halloDoc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Dashbord.css" asp-append-version="true" />

</head>

<body class="lightEnable">
    <section class="Header min-vh-5 d-flex justify-content-between">
        <div class="d-flex">
            <button class="Menu_btn btn w-5 btn-info text-info bg-transparent mt-3 mb-3 ms-2 " type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
                <i class="bi bi-list" id="ToggleMenu"></i>
            </button>
            <img class="HLOGO" src="~/image/Fig56. Patient site 1.png">
        </div>


        <div class="d-flex align-self-baseline">
            @if (Context.Request.Cookies["HalloCookie"] != null)
            {
                <p class="logInInfo text-secondary mt-4 me-3"></p>

                <span class="mt-4 pe-3 headerName">
                    <span>Welcome</span>
                    <strong class="text-dark">
                        @Context.Request.Cookies["CookieUserName"]
                    </strong>
                </span>


                <form asp-action="logOut" asp-controller="Patient">
                    <button type="submit" class="btn w-5 btn-info text-info bg-transparent mt-3 p-2">
                        <i class="bi bi-box-arrow-right text-info"></i><span class="HeadLogOut ms-2">Logout</span>
                    </button>
                </form>
            }
            <button class=" btn w-5 btn-info rounded bg-transparent p-2 mt-3 ms-2 me-2" id="modeIcon">
                <i class="bi bi-moon text-info ps-2 pe-2 MICON"></i>
            </button>
        </div>
    </section><hr class="m-0" />

    @RenderBody()

    <footer class="footer d-flex justify-content-end min-vh-5 bg-secondary">
        <div class="footerCnt d-flex mt-2 fw-bold me-4">
            <a class="text-dark text-decoration-none" href="#">Term's of Condition</a>
            <p class="text-dark ms-2">|</p>
            <a class="text-dark text-decoration-none ms-2" href="#">privacy policy</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    @*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@



    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
