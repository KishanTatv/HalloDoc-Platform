@model HalloDoc.Entity.RequestForm.ClientInformation;

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Patient/PLoginLayout.cshtml";
}



<form class="FormCnt w-25" asp-controller="Patient" asp-action="CreatePatient" method="post">

    <h4 class="mb-4 mt-3">Create Account</h4>

    <div class="form-floating mb-3">
        <input type="text" class="form-control bg-transparent focus-ring focus-ring-info  position-relative"
               id="floatingInput" placeholder="name@example.com" asp-for="Email">
        <label for="floatingInput">Username</label>
        <div class="position-absolute top-0 end-0 mx-3 my-2">
            <i class="bi bi-person-circle fs-4 text-secondary"></i>
        </div>
    </div>

    <div class="form-floating mb-3">
        <input type="password" class="form-control bg-transparent focus-ring focus-ring-info  position-relative"
               id="Password" asp-for="Password" >
        <label for="floatingInput">Password</label>
    </div>

    <div class="form-floating mb-3">
        <input type="password" class="form-control bg-transparent focus-ring focus-ring-info  position-relative"
               id="confirmPassword" asp-for="ConfirmPassword">
        <label for="floatingInput">Confirm Password</label>
    </div>

    @if (TempData["Msg"] != null)
    {
        <p class="text-danger text-center">@TempData["Msg"]</p>
    }

    <button type="submit" class="w-100 h-10 btn btn-md btn-info text-light mt-3" onclick="return isPasswordSame()">Create</button>

</form>
