@model HalloDoc.Entity.AdminTab.CreateRoleViewModel;

@{
    ViewData["Title"] = "Create role";
    Layout = "";
}

<div class="HContainer m-auto">
    <div class="d-flex justify-content-between mt-4">
        <h4>Create Role</h4>
        <a class="btn w-5 btn-info rounded bg-transparent m-2 text-info" asp-controller="AdminTab" asp-action="Provider">
            <strong class="pe-2">&lt Back</strong>
        </a>
    </div>

    <div class="rounded shadow p-4 mb-5 bg-body-tertiary rounded">
        <div class="mb-4">
            <h5>Details></h5>
            <div class="row">
                <div class="col-md-6 form-floating mt-2">
                    <input type="text" class="form-control bg-transparent Adad" placeholder="add1">
                    <label class="ms-3">Role Name</label>
                </div>
                <div class="col-md-6 form-floating mt-2">
                    <select class="form-select selectReg" aria-label="Floating label select" onchange="updateRoleId(this)">
                        <option value="0" selected> All </option>
                        @foreach(var role in Model.aspnetrole)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                    <label class="ms-2" for="floatingSelect">state</label>
                </div>
            </div>
            <div class="mt-4">
                <div class="form-check form-check-inline">
                    <input name="checkReg" class="form-check-input AdIn checkb" type="checkbox" value="">
                    <label>Dash</label>
                </div>
                <div class="form-check form-check-inline">
                    <input name="checkReg" class="form-check-input AdIn checkb" type="checkbox" value="">
                    <label>Invoice</label>
                </div>
                <div class="form-check form-check-inline">
                    <input name="checkReg" class="form-check-input AdIn checkb" type="checkbox" value="">
                    <label>History</label>
                </div>
            </div>
        </div>
    </div>
</div>
