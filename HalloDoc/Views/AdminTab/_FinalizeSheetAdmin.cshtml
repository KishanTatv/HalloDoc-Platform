@model HalloDoc.Entity.Models.Providerfullsheet;
@{
}

@if (Model != null)
{
    <h6 class="mb-3"> Peniding Bi-Weekly timesheet </h6>
    <div class="table-responsive">
        <table class="table">
            <thead class="table-secondary">
                <tr>
                    <th scope="col"> Start date </th>
                    <th scope="col"> End date </th>
                    <th scope="col"> Status </th>
                    <th scope="col"> Action </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Startdate</td>
                    <td>@Model.Enddate</td>
                    <td>pending</td>
                    <td>
                        <button type="button" class="btn btn-outline-info FinalizeBtn">Approve</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <p class="ms-2">Not finalized the timesheet in specified time period</p>
}