@model IEnumerable<HalloDoc.Entity.Models.Blockrequest>;


@{
    ViewData["Title"] = "Block History";
    Layout = "~/Views/Shared/_LayoutDashbord.cshtml";
}


<div class="MainContent pt-0 min-vh-100">
    <partial name="partial/AdminNavTab" />

    <div class="d-flex w-100 justify-content-center pb-4">
        <div class="HContainer m-auto">
            <div class="d-flex m-3">
                <h5>Block History</h5>
            </div>

            <div class="rounded shadow p-4 mb-5 bg-body-tertiary rounded">
                <div class="mb-4">
                    <div class="row">
                        <div class="col-md-3 form-floating mt-2">
                            <input type="text" class="form-control bg-transparent Adad" placeholder="add1">
                            <label class="ms-3">Name</label>
                        </div>
                        <div class="col-md-3 form-floating mt-2">
                            <input type="date" class="form-control bg-transparent Adad" placeholder="add1">
                            <label class="ms-3">Dob</label>
                        </div>
                        <div class="col-md-3 form-floating mt-2">
                            <input type="email" class="form-control bg-transparent Adad" placeholder="add1">
                            <label class="ms-3">Email</label>
                        </div>
                        <div class="col-md-3 form-floating mt-2">
                            <input type="number" class="form-control bg-transparent Adad" placeholder="add1">
                            <label class="ms-3">Phone Number</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-2 mb-2">
                        <button class="btn btn-outline-info text-info">Clear</button>
                        <button class="btn btn-info text-light ms-3">Search</button>
                    </div>
                </div>
                <div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-secondary">
                                <tr>
                                    <th scope="col"> Patient Name </th>
                                    <th scope="col">Phone Number </th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Created Date <i class="bi bi-arrow-down ms-1"> </i> </th>
                                    <th scope="col">Notes</th>
                                    <th scope="col">is Active</th>
                                    <th scope="col" class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.Request.Requestclients.FirstOrDefault().Firstname @item.Request.Requestclients.FirstOrDefault().Lastname</td>
                                        <td> @item.Request.Requestclients.FirstOrDefault().Phonenumber </td>
                                        <td> @item.Request.Requestclients.FirstOrDefault().Email </td>
                                        <td> @item.Createddate </td>
                                        <td>test</td>
                                        <td>
                                            <input name="checkActive" class="form-check-input AdIn checkb" type="checkbox" value="">
                                        </td>
                                        <td class="text-center">
                                            <a class="btn btn-outline-info ps-2 pe-2 p-0 PContact">
                                                Unblock
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
