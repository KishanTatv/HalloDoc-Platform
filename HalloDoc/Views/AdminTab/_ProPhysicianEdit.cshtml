                        <label class="ms-3">First Name</label>
                    </div>
                    <div class="col-md-6 form-floating mt-2">
                        <input type="text" class="form-control bg-transparent AdIn" placeholder="lastname" asp-for="physician.Lastname">
                        <label class="ms-3">Last Name</label>
                    </div>
                    <div class="col-md-6 form-floating mt-2">
                        <input type="email" class="form-control bg-transparent" id="email" placeholder="email" asp-for="physician.Email">
                        <label class="ms-3">Email</label>
                    </div>
                    <div class="col-md-6 form-floating mt-2">
                        <input type="text" id="phone1" class="form-control bg-transparent AdIn" style="height:58px" asp-for="physician.Mobile" />
                    </div>
                    <div class="col-md-6 form-floating mt-2">
                        <input type="text" class="form-control bg-transparent AdIn" placeholder="licence" asp-for="physician.Medicallicense">
                        <label class="ms-3">Medical Licencse</label>
                    </div>
                    <div class="col-md-6 form-floating mt-2">
                        <input type="text" class="form-control bg-transparent AdIn" placeholder="npi" asp-for="physician.Npinumber">
                        <label class="ms-3">NPI Number</label>
                    </div>
                    <div class="col-md-6 form-floating mt-2">
                        <input type="text" class="form-control bg-transparent AdIn" placeholder="syncemail" asp-for="physician.Syncemailaddress">
                        <label class="ms-3">Synchronization  Email Address</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-4 mb-4">
                <button id="editbtn1" type="button" class="btn btn-info me-4" onclick="editEnable1()">Edit</button>
                <button type="submit" id="submitbtn1" class="btn btn-info d-none ps-4 pe-4 me-3">Submit</button>
                <button id="cancelbtn1" type="button" class="btn btn-danger d-none ps-4 pe-4" onclick="cancelEnable1()">Cancel</button>
            </div>
        </form>

        <form id="Formdata2" novalidate class="needs-validation">
